<div class='tooltip-container {{getTooltipTheme}}'>
  <div class='tooltip-header'>
    <h2>{{name}}</h2>

    <div class='tooltip-description'>
      {{description}}
    </div>

    <div class='tooltip-footer'>
      <span class='action-tag'>{{getDuration duration}}</span>
    </div>
  </div>
</div>